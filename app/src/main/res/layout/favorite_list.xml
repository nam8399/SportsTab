<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:ndroid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fimg_pr"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/ftv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/fimg_pr"
                android:text="laptop"
                android:textColor="#3CC540"
                android:textSize="20dp"
                ndroid:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
            <TextView
                android:id="@+id/ftv_name2"
                android:text="laptop"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="12dp"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/fimg_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                ndroid:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
            <TextView
                android:id="@+id/ftv_name3"
                android:text="laptop"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="35dp"
                android:textSize="13dp"
                android:layout_toRightOf="@+id/fimg_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                ndroid:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>
            <ImageView
                android:id="@+id/fimg_pr2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="270dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
